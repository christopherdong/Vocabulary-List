<?xml version="1.0" encoding="utf-8"?>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

	<ScrollView
	    android:id="@+id/scrollView1"
	    android:layout_width="match_parent"
	    android:layout_height="380dp" >

		<LinearLayout
		    android:layout_width="match_parent"
		    android:layout_height="match_parent"
		    android:orientation="vertical" >

	         <TextView
		        android:layout_width="fill_parent"
		        android:layout_height="wrap_content"
		        android:paddingLeft="10dip"
		        android:paddingRight="10dip"
		        android:paddingTop="10dip"
		        android:text="Word:"
		        android:textSize="17dip" />
	 
		    <!-- Input Name -->
		    <EditText android:id="@+id/inputWord"
		        android:layout_width="fill_parent"
		        android:layout_height="wrap_content"
		        android:layout_margin="5dip"
		        android:layout_marginBottom="15dip"
		        android:singleLine="true"/>
		 
		    <!-- Word Type Label -->
		    <TextView android:layout_width="fill_parent"
		        android:layout_height="wrap_content"
		        android:text="Word Type:"
		        android:paddingLeft="10dip"
		        android:paddingRight="10dip"
		        android:paddingTop="10dip"
		        android:textSize="17dip"/>
		 
		    <!-- Input word type -->
		    <EditText android:id="@+id/inputWordType"
		        android:layout_width="fill_parent"
		        android:layout_height="wrap_content"
		        android:layout_margin="5dip"
		        android:layout_marginBottom="15dip"
		        android:singleLine="true"/>
		 
		    <!-- Definition Label -->
		    <TextView android:layout_width="fill_parent"
		        android:layout_height="wrap_content"
		        android:text="Definition:"
		        android:paddingLeft="10dip"
		        android:paddingRight="10dip"
		        android:paddingTop="10dip"
		        android:textSize="17dip"/>
		 
		    <!-- Input definition -->
		    <EditText android:id="@+id/inputDefinition"
		        android:layout_width="fill_parent"
		        android:layout_height="wrap_content"
		        android:layout_margin="5dip"
		        android:layout_marginBottom="15dip"
		        android:lines="2"
		        android:gravity="top"/>
		    
		    <!-- Example Label -->
		    <TextView android:layout_width="fill_parent"
		        android:layout_height="wrap_content"
		        android:text="@string/example_"
		        android:paddingLeft="10dip"
		        android:paddingRight="10dip"
		        android:paddingTop="10dip"
		        android:textSize="17dip"/>
		 
		    <!-- Input example -->
	
		    <EditText
		        android:id="@+id/inputExample"
		        android:layout_width="fill_parent"
		        android:layout_height="wrap_content"
		        android:layout_margin="5dip"
		        android:layout_marginBottom="100dip"
		        android:ems="10"
		        android:gravity="top"
		        android:lines="4" >
	
	        <requestFocus />
	    	</EditText>
	        
	            <!-- Example Label -->
			<TextView android:layout_width="fill_parent"
			    android:layout_height="wrap_content"
			    android:text="\n\n\n\n\n\n\n"
			    android:paddingLeft="10dip"
			    android:paddingRight="10dip"
			    android:paddingTop="10dip"
			    android:textSize="17dip"/>
    
    	</LinearLayout>
	</ScrollView>

	<RelativeLayout
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:padding="1dp" >

        <Button
            android:id="@+id/btnSave"
            style="@style/btnStyleShakespeare"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:text="Save Changes" />

        <Button
            android:id="@+id/btnDelete"
            style="@style/btnStyleShakespeare"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:text="Delete" />
	</RelativeLayout>
</LinearLayout>